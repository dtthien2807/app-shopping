<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/orderID"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:text="id"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.2"
                app:srcCompat="@drawable/hoa" />

            <TextView
                android:id="@+id/createdAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30/06/2023 8:22am"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#564CAF50"
                android:text="Đã giao hàng"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#185A1B"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/nameUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khách hàng: Dinh Hien" />

        <TextView
            android:id="@+id/phoneUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: 0967236128" />

        <TextView
            android:id="@+id/addressUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: Nam Trung, Tiền Hải, Thái Bình" />

        <TextView
            android:id="@+id/dateOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày hẹn giao: 10/07/2023" />

        <TextView
            android:id="@+id/dateShip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày giao thực tế: 09/07/2023" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="173dp"
                android:layout_height="149dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/hoa_tulip_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:padding="5dp"
                    android:text="Bó hoa Tulip nhân tạo thủ công DIY có đèn ngủ mô phỏng làm quà tặng"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/quantityOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="x1"
                    android:textColor="#676161"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="195dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/tien" />

                    <TextView
                        android:id="@+id/sumOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="1.000.000"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Xem thêm >>"
            android:textAlignment="center"
            android:textColor="#9A6969"
            android:textSize="13sp"
            android:textStyle="italic" />
    </LinearLayout>

</LinearLayout>