<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="173dp"
            android:layout_height="149dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/hoa_tulip_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:text="Bó hoa Tulip nhân tạo thủ công DIY có đèn ngủ mô phỏng làm quà tặng"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/quantityOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="x1"
                android:textColor="#676161"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="195dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/tien" />

                <TextView
                    android:id="@+id/sumOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="1.000.000"
                    android:textAlignment="textStart" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>