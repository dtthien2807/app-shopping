<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Item_Detail_Fragment">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <ImageView
             android:id="@+id/item_img"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:src="@drawable/red_rose"></ImageView>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:gravity="center"
             android:layout_margin="5dp"
             android:padding="5dp">
             <TextView
                 android:id="@+id/item_name"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Hoa Hồng đỏ"
                 android:textSize="30dp"
                 android:gravity="center"></TextView>
             <View
                 android:layout_width="200dp"
                 android:layout_height="1dp"
                 android:background="#000000"></View>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Mô tả"
                 android:textStyle="bold"
                 android:textSize="25dp"
                 android:layout_marginTop="10dp"></TextView>
             <TextView
                 android:id="@+id/item_description"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp"
                 android:textSize="20dp"
                 android:text="@string/Item_description"
                 android:background="@drawable/item_desc_style"></TextView>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Đối tượng"
                 android:textStyle="bold"
                 android:textSize="25dp"
                 android:layout_marginTop="10dp"></TextView>
             <TextView
                 android:id="@+id/item_people"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/Item_people"
                 android:padding="10dp"
                 android:textSize="20dp"
                 android:background="@drawable/item_desc_style"></TextView>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Dịp thích hợp"
                 android:textStyle="bold"
                 android:textSize="25dp"
                 android:layout_marginTop="10dp"></TextView>
             <TextView
                 android:id="@+id/item_occa"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp"
                 android:textSize="20dp"
                 android:text="@string/Item_occa"
                 android:background="@drawable/item_desc_style"></TextView>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Môi trường"
                 android:textStyle="bold"
                 android:textSize="25dp"
                 android:layout_marginTop="10dp"></TextView>
             <TextView
                 android:id="@+id/item_habitat"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="10dp"
                 android:textSize="20dp"
                 android:text="@string/Item_habitat"
                 android:background="@drawable/item_desc_style"
                 android:layout_marginBottom="10dp"></TextView>
         </LinearLayout>
     </LinearLayout>
</androidx.core.widget.NestedScrollView>